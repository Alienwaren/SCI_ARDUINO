<Window x:Class="DHT11_GETTER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="175" Width="378">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock  HorizontalAlignment="Center" TextWrapping="Wrap" Text="Temperature:" VerticalAlignment="Center"/>
        <TextBox Name="_temperatureValue" Grid.Column="1" HorizontalAlignment="Center" Height="23"  TextWrapping="Wrap" Text="0" IsEnabled="False" VerticalAlignment="Center" Width="120"/>
        <TextBlock  HorizontalAlignment="Center"  Grid.Row="1" TextWrapping="Wrap" Text="Humidity" VerticalAlignment="Center"/>
        <TextBox Name="_humidityValue" Grid.Column="1" HorizontalAlignment="Center" Height="23"  Grid.Row="1" TextWrapping="Wrap" Text="0" IsEnabled="False" VerticalAlignment="Center" Width="120"/>

    </Grid>
</Window>
